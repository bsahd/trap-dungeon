{
  "tasks": {
    "build": "deno task buildBrowser; deno task buildClassic; deno task buildIndexHTML;",
    "buildBrowser": "deno bundle browser/main.tsx -o browser/bundled.js --minify --sourcemap=linked",
    "buildClassic": "deno bundle browser_classic/main.ts -o browser_classic/bundled.js --minify --sourcemap=linked",
    "buildIndexHTML": "deno run -A browser/generate-index-html.tsx",
    "fc": "deno fmt **/*.ts **/*.tsx; deno check **/*.ts **/*.tsx"
  },
  "imports": {
    "preact": "npm:preact@10",
    "preact-render-to-string": "npm:preact-render-to-string@^6.6.1"
  },
  "compilerOptions": {
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  }
}
